#!/bin/bash

# Array job to evaluate mono and multilingual tk-instruct on mono and
# multilingual tasks

#SBATCH --partition=gpu
#SBATCH --gres=gpu:1
#SBATCH --job-name=TKEVAL
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=3
#SBATCH --time=06:00:00
#SBATCH --mem=32000M
#SBATCH --array=1-4%2
#SBATCH --output=lisa/outputs/%x_%A_%a.out

source ~/.bashrc

conda activate tk-instruct

export CUDA_DEVICE_ORDER="PCI_BUS_ID"
export TRANSFORMERS_CACHE=$HOME/.cache/huggingface

cd ~/repos/tk-instruct

ARGS_FILE=~/repos/tk-instruct/lisa/args_eval.txt

srun python -u src/run_s2s.py \
    --do_predict \
    --predict_with_generate \
    --evaluation_strategy "no" \
    --max_source_length 1024 \
    --max_target_length 128 \
    --generation_max_length 128 \
    --max_num_instances_per_task 100 \
    --max_num_instances_per_eval_task 100 \
    --add_task_name False \
    --add_task_definition True \
    --num_pos_examples 2 \
    --num_neg_examples 0 \
    --add_explanation False \
    --tk_instruct False \
    --task_dir data/tasks \
    --overwrite_output_dir \
    --cache_dir ./cache/ \
    --overwrite_cache \
    --per_device_eval_batch_size 1 \
    $(head -$SLURM_ARRAY_TASK_ID $ARGS_FILE | tail -1)
